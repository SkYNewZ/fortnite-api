{
  "name": "fortnite-api",
  "version": "1.1.0",
  "description": "REST Fortnite API. Get stats, score, kills...",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SkYNewZ/fortnite-api.git"
  },
  "author": "SkYNewZ <quentin@lemairepro.fr> (https://lemairepro.fr)",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "build": "babel lib -d dist",
    "start": "yarn build && node dist/server.js",
    "lint": "eslint --fix lib",
    "serve": "node dist/server.js",
    "test": "yarn build && NODE_ENV=test nyc --reporter=html --reporter=text mocha --colors --require babel-register --timeout 3000 tests/*.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@sentry/node": "4.4.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.0",
    "colors": "^1.3.3",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "figlet": "^1.2.1",
    "fortnite-client": "^2.2.0",
    "morgan": "^1.9.1",
    "swagger-ui-express": "^4.0.2",
    "swagger-ui-themes": "^3.0.0"
  },
  "devDependencies": {
    "axios": "^0.18.1",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "eslint": ">=5.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": ">=2.13.0",
    "eslint-plugin-node": ">=7.0.0",
    "eslint-plugin-promise": ">=4.0.0",
    "eslint-plugin-standard": ">=4.0.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.5",
    "nyc": "^13.1.0"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
